@model Bespereboiniki.Datalayer.Tables.UPS
@{
    Layout = "~/Views/_Layout.cshtml";
}
<div>
    @using (Html.BeginForm("PostBespereboinik", "Add", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <input type="hidden" value="@Model.Id" name="Id"/>
        <table class="add-ups-table">
            <tr>
                <td>
                    <p>Введите имя </p>
                </td>
                <td>
                    <input type="text" name="Name"/>
                </td>
            </tr>
            <tr>
                <td>
                    <p>Введите напругу на вход :</p>
                </td>
                <td>
                    <input type="text" name="Uin"/>
                </td>
            </tr>
            <tr>
                <td>
                    <p>Введите напругу на выход :</p>
                </td>
                <td>
                    <input type="text" name="Uout"/>
                </td>
            </tr>
            <tr>
                <td>
                    <p>Введите ширину :</p>
                </td>
                <td>
                    <input type="text" name="Width"/>
                </td>
            </tr>
            <tr>
                <td>
                    <p>Введите высоту :</p>
                </td>
                <td>
                    <input type="text" name="Height"/>
                </td>
            </tr>
            <tr>
                <td>
                    <p>Введите долготу :</p>
                </td>
                <td>
                    <input type="text" name="Length"/>
                </td>
            </tr>
            <tr>
                <td>
                    <input type="submit" value="Отправить"/>
                </td>
                <td></td>
            </tr>
        </table>
    }
</div>