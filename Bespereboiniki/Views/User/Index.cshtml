@{
    Layout = "~/Views/_Layout.cshtml";
}

@model Bespereboiniki.Models.UserPageDto

<div>
    <table class="styled-table">
        <thead>
        <tr>
            <th>
                Фамилия
            </th>
            <th>
                Имя
            </th>
            <th>
                Отчество
            </th>
            <th>
                Логин
            </th>
            <th>
                Пароль
            </th>
            <th>
                Роль
            </th>
        </tr>
        </thead>
        <tbody>
        @{
            foreach (var user in Model.UserList)
            {
                <tr>
                    <td>
                        @Html.Raw(user.LastName)
                    </td>
                    <td>
                        @Html.Raw(user.FirstName)
                    </td>
                    <td>
                        @Html.Raw(user.Surname)
                    </td>
                    <td>
                        @Html.Raw(user.Login)
                    </td>
                    <td>
                        @Html.Raw(user.Password)
                    </td>
                    <td>
                        @Html.Raw(user.UserRole.Name)
                    </td>
                </tr>
            }
        }
        </tbody>
    </table>
</div>